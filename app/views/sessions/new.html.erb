<div class="row-fluid">  
  <div class='span12' id='bg'>
  <h2>Login</h2>
  
    <div class='span4'>
    <%= form_tag sessions_path do %>
      <div class="field">
          <%= label_tag :email %><br />
          <%= text_field_tag :email, params[:email] %>
      </div>
      <div class="field">
        <%= label_tag :password %><br />
        <%= password_field_tag :password %>
      </div>
      <button class="btn btn-primary" type="submit"class="actions">Log In</button>
    <% end %>
    </div>
  <div>
</div>

